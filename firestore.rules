rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reports collection rules
    match /reports/{reportId} {
      // Allow anyone to read reports (public safety data)
      allow read: if true;

      // Allow authenticated users to create new reports
      allow create: if request.auth != null
        && request.auth.uid != null
        && request.resource.data.userId == request.auth.uid  // user owns it
        && request.resource.data.createdAt is timestamp;      // valid server timestamp type

      // Allow only the owner to update their report
      allow update: if request.auth != null
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.updatedAt is timestamp;

      // Allow only the owner to delete their report
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.userId;
    }

    // Users collection rules (for profiles)
    match /users/{userId} {
      // Allow read if authenticated and own the profile
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow create/update only for the owner
      allow create, update: if request.auth != null && request.auth.uid == userId;

      // No deletes for users
      allow delete: if false;
    }
  }
}
