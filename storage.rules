rules_version = '2';

// Firebase Storage Security Rules for Safe Route Community Map
// These rules allow authenticated users to upload images for safety reports

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow users to upload images for safety reports
    // Any authenticated user can upload images
    match /reports/{reportId}/{fileName} {
      // Allow read access to all users (public safety information)
      allow read: if true;
      
      // Allow write access to any authenticated user
      allow write: if request.auth != null 
        && request.auth.uid != null
        && exists(/databases/(default)/documents/users/$(request.auth.uid))
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow users to upload profile pictures
    match /users/{userId}/profile/{fileName} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow write access only to the user themselves
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 2 * 1024 * 1024 // 2MB limit
        && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

